<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.App.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_only</item>

        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/logo_only</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/splash_background</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/splash_background</item>
    </style>

    <style name="QuizOptionButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">#c2802f</item>
    </style>

</resources>